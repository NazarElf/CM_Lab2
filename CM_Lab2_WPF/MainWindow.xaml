<Window x:Class="CM_Lab2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CM_Lab2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="750">
    <Grid Background="Black">
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Margin="10,10,0,48" Width="327">
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF122329" Offset="0"/>
                    <GradientStop Color="#FF304247" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.Background>
            <ListBoxItem Height="33">
                <Grid>
                    <TextBox Margin="107,0,-69,0" BorderThickness="2" BorderBrush="#FF000853">
                        <TextBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF8FACC9" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>
                    <Label x:Name="label" Content="Central Processor" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#00000000" Offset="1"/>
                                <GradientStop Color="White" Offset="0.4"/>
                                <GradientStop Color="#9200FFC5" Offset="0.583"/>
                            </RadialGradientBrush>
                        </Label.Background>
                    </Label>

                </Grid>
            </ListBoxItem>
        </ListBox>
        <Button Content="TEMP START" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="616,429,10,0" Height="30" Width="116" FontSize="20" Click="Button_Click" />
        <Button x:Name="button" Content="Button" Margin="10,0,0,10" HorizontalAlignment="Left" Width="75" Height="33" VerticalAlignment="Bottom">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF97A9B0" Offset="1"/>
                    <GradientStop Color="#FFF9F9F9"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy" Content="Button" Margin="90,0,0,10" HorizontalAlignment="Left" Width="75" Height="33" VerticalAlignment="Bottom">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF97A9B0" Offset="1"/>
                    <GradientStop Color="#FFF9F9F9"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy1" Content="Button" Margin="170,0,0,10" HorizontalAlignment="Left" Width="75" Height="33" VerticalAlignment="Bottom">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF97A9B0" Offset="1"/>
                    <GradientStop Color="#FFF9F9F9"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="398,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="371,83,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
