<Window x:Class="CM_Lab2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CM_Lab2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="758">
    <Window.Resources>
        <LinearGradientBrush x:Key="Buttons" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#CC97A9B0" Offset="1"/>
            <GradientStop Color="#CCF9F9F9"/>
        </LinearGradientBrush>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" >
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#CC97A9B0" Offset="1"/>
                        <GradientStop Color="#CCF9F9F9"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="LightGoldenrodYellow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Overlay" CornerRadius="2" BorderThickness="1.5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="true">
                                <Setter Property="BorderBrush" TargetName="Overlay" Value="Black"/>
                                <Setter Property="Background" TargetName="Overlay" Value="{DynamicResource Buttons}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="Overlay" Value="Lime"/>
                                <Setter Property="BorderBrush" TargetName="Overlay" Value="Green"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="Overlay" Value="Blue"/>
                                <Setter Property="BorderBrush" TargetName="Overlay" Value="AliceBlue"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Overlay" Property="Background" Value="Red"/>
                                <Setter TargetName="Overlay" Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--<Style TargetType="Button" x:Key="MyButton2">
            <Setter Property="Background" Value="{StaticResource Buttons}" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Green"/>
                    <Setter Property="Foreground" Value="DeepPink"/>
                </Trigger>
            </Style.Triggers>
        </Style>-->
    </Window.Resources>
    <Grid Name="BG" Background="Black">
        <ListBox x:Name="listBox" Margin="10,10,10,48" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListBox.Resources>
                <!--<SolidColorBrush Color="Black" x:Key="{SystemColors.InactiveBorderBrushKey}"/>-->
                <LinearGradientBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF000000" Offset="0"/>
                    <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
                    <GradientStop Color="#00000000" Offset="0.1"/>
                    <GradientStop Color="#00000000" Offset="0.9"/>
                    <GradientStop Color="#FF000000" Offset="1"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                    <GradientStop Color="#FF4B4B4B" Offset="0.5"/>
                    <GradientStop Color="#00000000" Offset="0.1"/>
                    <GradientStop Color="#00000000" Offset="0.9"/>
                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.Resources>
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF122329" Offset="0"/>
                    <GradientStop Color="#FF304247" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.Background>
            <ListBoxItem Name="CD" Height="40">
                <ListBoxItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#00000000" Offset="0.1"/>
                        <GradientStop Color="#00000000" Offset="0.9"/>
                    </LinearGradientBrush>
                </ListBoxItem.Background>
                <Grid Height="40" Width="719">
                    <TextBox Text="1" 
                             Margin="127,2,506,2" 
                             BorderThickness="2" 
                             BorderBrush="#FF41666C" 
                             ToolTip="Tau" 
                             VerticalContentAlignment="Center" 
                             Background="{DynamicResource Buttons}" KeyUp="TextBox_KeyUp" UseLayoutRounding="True"/>
                    <Label x:Name="label" 
                           Content="Central Processor" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top" Height="36"
                           VerticalContentAlignment="Center" 
                           HorizontalContentAlignment="Center" 
                           Foreground="Black" FontFamily="Consolas" 
                           FontWeight="Bold" Margin="0,2,0,0" 
                           Width="122">
                        <Label.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#00000000" Offset="1"/>
                                <GradientStop Color="#9200FFC5" Offset="0.66"/>
                                <GradientStop Color="White" Offset="0.49"/>
                            </RadialGradientBrush>
                        </Label.Background>
                    </Label>
                    <Button Margin="624,0,0,0">
                        <TextBlock TextWrapping="Wrap"
                                   Text="Add Transition" />
                    </Button>
                    <Button Margin="532,0,95,0" Background="{DynamicResource Buttons}" UseLayoutRounding="False">
                        <TextBlock TextWrapping="Wrap"
                                   Text="Remove Transition" Height="30" Width="77" TextAlignment="Center" FontSize="11" />
                    </Button>
                    <Menu HorizontalAlignment="Left" Margin="218,2,-272,0" VerticalAlignment="Top" Width="309" Height="36" Background="{DynamicResource Buttons}" BorderBrush="#FF41666C" BorderThickness="2" UseLayoutRounding="True">
                        <MenuItem Header="Transitions" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Width="309" Height="36" FontSize="22" FontWeight="SemiBold">
                            <Grid Width="320">
                                <Label x:Name="l2" 
                                        Content="Central Processor" 
                                        HorizontalAlignment="Left" 
                                        VerticalAlignment="Top" Height="30"
                                        VerticalContentAlignment="Center" 
                                        HorizontalContentAlignment="Center" 
                                       FontSize="12"
                                        Foreground="Black" FontFamily="Consolas" FontWeight="Bold">
                                    <Label.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#00000000" Offset="1"/>
                                            <GradientStop Color="White" Offset="0.49"/>
                                            <GradientStop Color="#9200FFC5" Offset="0.66"/>
                                        </RadialGradientBrush>
                                    </Label.Background>
                                </Label>
                                <Slider x:Name="Slider1" Margin="124,5,20,5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Maximum="100" IsSnapToTickEnabled="True" Value="100"/>
                                <TextBox x:Name="CP_SliderTextBox"  Margin="305,5,-39,5" Text="1.0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="12" IsEnabled="False"/>
                                <CheckBox Margin="364,9,-364,-5" ToolTip="Locked" IsEnabled="False" IsChecked="True"/>
                            </Grid>
                        </MenuItem>
                    </Menu>
                </Grid>
            </ListBoxItem>
            <!--<Slider Name="SliderTry" Width="219" Maximum="100"/>-->
        </ListBox>
        <Button Content="TEMP START" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="616,429,10,0" Height="30" Width="116" FontSize="20" Click="Button_Click" />
        <Button x:Name="button" Content="Add" Margin="10,0,0,10" HorizontalAlignment="Left" Width="75" Height="33" VerticalAlignment="Bottom" Background="{DynamicResource Buttons}" Click="button_Click_1"/>
        <Button x:Name="button_Copy" Content="Button" Margin="90,0,0,10" HorizontalAlignment="Left" Width="75" Height="33" VerticalAlignment="Bottom" Background="{DynamicResource Buttons}"/>
        <Button x:Name="button_Copy1" Content="Button" Margin="170,0,0,10" HorizontalAlignment="Left" Width="75" Height="33" VerticalAlignment="Bottom" Background="{DynamicResource Buttons}"/>
    </Grid>
</Window>
